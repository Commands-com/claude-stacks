{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "mcp__google-meet__get-current-time",
      "mcp__google-meet__create-meet-link",
      "mcp__google-calendar__get-current-time",
      "mcp__google-calendar__list-calendars",
      "mcp__google-calendar__create-event",
      "mcp__google-meet__get-email-addresses",
      "mcp__google-calendar__update-event",
      "mcp__google-calendar__list-events",
      "Read(//Users/dtannen/.claude/stacks/**)",
      "mcp__serena__read_file",
      "Bash(npm run build:*)",
      "mcp__serena__replace_regex"
    ],
    "deny": [],
    "ask": []
  },
  "model": "opusplan",
  "hooks": {
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bash -c 'json_input=$(cat); cwd=$(echo \"$json_input\" | jq -r \".cwd\" | xargs basename); if command -v osascript >/dev/null 2>&1; then osascript -e \"display notification \\\"Claude completed task in $cwd\\\" with title \\\"Claude Code\\\"\"; elif command -v notify-send >/dev/null 2>&1; then notify-send \"Claude Code\" \"Claude completed task in $cwd\"; fi'"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/ccline/ccline",
    "padding": 0
  },
  "feedbackSurveyState": {
    "lastShownTime": 1754085414877
  }
}